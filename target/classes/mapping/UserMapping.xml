<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="model.DAO.UserDAO">

    <resultMap id="UserMap" type="model.entity.User">
        <result property="userId" column="userId"/>
        <result property="userName" column="userName"/>
        <result property="password" column="password"/>
        <result property="phoneNum" column="phoneNum"/>
        <result property="nickName" column="nickName"/>
        <result property="realName" column="realName"/>
        <result property="academicNum" column="academicNum"/>
        <result property="idCard" column="idCard"/>
        <result property="status" column="status"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="getUserById" resultMap="UserMap">
        SELECT * FROM User
        <where>
            userId = '${userId}'
        </where>
    </select>

    <select id="getUserByName" resultMap="UserMap">
        SELECT * FROM User
        <where>
            userName = '${userName}'
        </where>
    </select>

    <insert id="createUser">
        INSERT INTO User(userId,userName,password,phoneNum)
        VALUES ('${userId}','${userName}','${password}','${phoneNum}')
    </insert>

    <update id="updateUser">
        UPDATE USER
        SET userName='${userName}',password='${password}',phoneNum='${phoneNum}',
            nickName='${nickName}',realName='${realName}',academicNum='${academicName}',
            idCard='${idCard}',status=${status},description='${description}'
        WHERE userId='${userId}'
    </update>

    <select id="getAllUsers">
        SELECT * FROM USER
    </select>

    <delete id="deleteUser">
        DELETE *
        FROM USER
        <where>
            userId='${userId}'
        </where>
    </delete>

</mapper>